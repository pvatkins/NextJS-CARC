{
  "name": "monorepo-nextjs-paypal-integration",
  "version": "1.0.0",
  "description": "Next.js application with PayPal integration",
  "author": "Paul Atkins",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "backend_paypal"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:backend_paypal": "npm run start --workspace=backend_paypal",
    "dev:all": "npm-run-all --parallel dev:frontend dev:backend dev:backend_paypal",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:backend_paypal": "npm run build --workspace=backend_paypal",
    "build:all": "npm-run-all build:*",
    "lint:frontend": "eslint frontend --ext .ts,.tsx",
    "lint:backend": "eslint backend --ext .ts",
    "lint:backend_paypal": "eslint backend_paypal --ext .ts",
    "lint:all": "npm-run-all --parallel lint:*",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md,css,scss,html}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md,css,scss,html}\" --ignore-path .prettierignore",
    "gallery:generate": "npm run generate-gallery --workspace=frontend",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/estree": "^1.0.8",
    "eslint": "^9.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
