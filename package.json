{
  "name": "monorepo-nextjs-paypal-integration",
  "version": "1.0.0",
  "description": "Next.js application with PayPal integration",
  "author": "Paul Atkins",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "backend_paypal"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:backend_paypal": "npm start --workspace=backend_paypal",
    "dev:all": "npm-run-all --parallel dev:frontend dev:backend dev:backend_paypal",
    "gallery:generate": "npm run gallery:generate --workspace=frontend"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}